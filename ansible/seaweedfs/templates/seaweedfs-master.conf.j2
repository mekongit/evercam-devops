description "seaweedfs"
start on filesystem or runlevel [2345]
stop on runlevel [!2345]
limit nofile 1000000 1000000

respawn
chdir /
setuid {{user_name}}
setgid {{user_name}}
console log

exec {{seaweedfs_path}} -v 0 server -filer true -ip {{seaweedfs_master_ip}} -dir {{storage_dir}} -volume.max 2270 -volume.images.fix.orientation false -pulseSeconds 5 
